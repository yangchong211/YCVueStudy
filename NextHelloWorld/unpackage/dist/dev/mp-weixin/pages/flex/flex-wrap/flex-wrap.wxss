.container {
	/* 定义flex容器 */
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	/* 
		设置容器内部元素的排列方向 
		row: 定义排列方向 从左到右
		row-reverse: 从右到左
		column: 从上到下
		column-reverse: 从下到上
	*/
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	
	/**
		nowrap: 不换行
		wrap: 换行
		wrap-reverse: 逆向换行
	 */
	-webkit-flex-wrap: wrap;
	    -ms-flex-wrap: wrap;
	        flex-wrap: wrap;
	
	height: 600rpx;
	background-color: gray;
}
